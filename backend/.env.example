# =============================================================================
# FitWhisperer API Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/body_measurement_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=body_measurement_db

# Redis (used for rate limiting and caching in production)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY SETTINGS (CRITICAL - MUST CONFIGURE FOR PRODUCTION)
# =============================================================================

# SECRET_KEY - REQUIRED for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# Leave empty for development (auto-generated, not persisted)
SECRET_KEY=

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins
# For production, set to your actual domain(s)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# API Settings
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=FitWhisperer API

# =============================================================================
# Environment Settings
# =============================================================================
# Set to "production" for production deployments
ENVIRONMENT=development

# DEBUG - MUST be False in production!
# Will be forced to False if ENVIRONMENT=production
DEBUG=False

# =============================================================================
# AI/ML Settings
# =============================================================================
MAX_IMAGE_SIZE_MB=10
CONFIDENCE_THRESHOLD=0.6
DEFAULT_HEIGHT_CM=170

# YOLO Settings
YOLO_MODEL_SIZE=yolov8m.pt
YOLO_CONFIDENCE_THRESHOLD=0.5

# Body Validation Thresholds
BODY_VALIDATION_HEAD_THRESHOLD=0.5
BODY_VALIDATION_SHOULDERS_THRESHOLD=0.55
BODY_VALIDATION_ELBOWS_THRESHOLD=0.4
BODY_VALIDATION_HANDS_THRESHOLD=0.35
BODY_VALIDATION_TORSO_THRESHOLD=0.5
BODY_VALIDATION_LEGS_THRESHOLD=0.45
BODY_VALIDATION_FEET_THRESHOLD=0.4
BODY_VALIDATION_OVERALL_MIN=0.45
